{
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "importOrder": ["^@?\\w", "^[^.]", "^\\."],
  "importOrderSeparation": false,
  "overrides": [
    {
      "files": ["src/**/*.json"],
      "options": {
        "jsonRecursiveSort": true
      }
    }
  ],
  "plugins": ["prettier-plugin-sort-json", "@trivago/prettier-plugin-sort-imports"],
  "printWidth": 84,
  "proseWrap": "always",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all"
}
